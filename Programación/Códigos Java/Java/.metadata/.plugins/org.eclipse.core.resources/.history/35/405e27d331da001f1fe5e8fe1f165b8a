	int Comprobador(String texto, int longitud) {
		int consecutivas = 0;
		int puntos = 0;
		for (int i = 0; i < longitud; i++) {
			if (String.valueOf(i).equals("a") || String.valueOf(i).equals("e") || String.valueOf(i).equals("i") || String.valueOf(i).equals("o") || String.valueOf(i).equals("u")) {
				puntos++;
				if(puntos == 2) {
					consecutivas++;
					puntos = 0;
				}
				
			}
		}

		return consecutivas;

	}

}
